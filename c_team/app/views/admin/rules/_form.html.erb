<%= render 'shared/errors', obj: @rule %>

<%= form_for [:admin, @rule], class: 'form-horizontal' do |f| %>

<div class="form-group">
  <label class="col-md-12 category-radio">禁止対象カテゴリ1</label>
  <div class="col-md-12 radio">
    <%= f.hidden_field :id %> <!-- チェックボックスが空の場合の対策 -->
    <%= f.collection_radio_buttons :category1_id, Category.where.not(id: 1), :id, :name do |ff| %>
      <%= ff.label { ff.radio_button + ff.text } %>
    <% end %>
  </div>
</div>

<div class="form-group">
  <label class="col-md-12 category-radio">禁止対象カテゴリ2</label>
  <div class="col-md-12 radio">
    <%= f.collection_radio_buttons :category2_id, Category.where.not(id: 1), :id, :name do |ff| %>
      <%= ff.label { ff.radio_button + ff.text } %>
    <% end %>
  </div>
</div>

<div class="form-group">
  <div class="col-md-offset-10 col-md-2">
    <%= f.submit '新規作成', class: 'btn btn-primary' %>
  </div>
</div>

<% end %>
