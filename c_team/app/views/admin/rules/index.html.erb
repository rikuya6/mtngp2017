<% @page_title = '管理画面：詰め合わせ設定' %>

<div class="page-header">
  <h1>詰め合わせ設定</h1>
</div>

<%= link_to '新規作成', new_admin_rule_path, class: 'btn btn-primary' %>
<% if @rules.present? %>
<div class="table-responsive">
  <table class="table table-striped table-bordered">
    <thead>
      <tr>
        <th class="text-center">詰め合わせ禁止カテゴリ</th>
        <th class="text-center"></th>
      </tr>
    </thead>
    <tbody>
      <% @rules.each do |rule| %>
      <tr>
        <td class="col-md-11"><%= rule_tag_label(rule) %></td>
        <td class="text-center col-md-1">
          <%= link_to '削除', admin_rule_path(rule), method: :delete, class: 'btn btn-xs btn-danger',
            style: 'width: 4em;', data: { disable_with: '削除中'} %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
<%= paginate @rules %>
<% else %>
<p>詰め合わせ設定がありません。</p>
<% end %>
