<% @page_title = '管理画面：ユーザ編集' %>

<div class="page-header">
  <h1>ユーザの編集</h1>
</div>

<%= render 'shared/errors', obj: @user %>

<%= form_for [:admin, @user], class: 'form-horizontal' do |f| %>
  <%= render 'form', f: f %>
  <div class="form-group">
    <div class="col-md-offset-10 col-md-2">
      <%= f.submit 'ユーザを更新する', class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
