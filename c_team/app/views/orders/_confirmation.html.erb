<% @page_title = '注文確認' %>

<%= form_for @order, class: 'form-horizontal' do |f| %>
<%= f.hidden_field :product_id %>
<%= f.hidden_field :wrapping_id %>
<%= f.hidden_field :zipcode %>
<%= f.hidden_field :dest %>
<%= f.hidden_field :payment %>

<h2>注文確認ページ</h2>

<%= f.fields_for :product do |ff| %>
  <%= ff.hidden_field :stock %>
  <div class="form-group">
    <%= ff.label :name, class: 'control-label col-md-12' %>
    <div class="col-md-12">
      <%= ff.text_field :name, class: 'form-control', disabled: true %>
    </div>
  </div>

  <div class="form-group">
    <%= ff.label :price, class: 'control-label col-md-12' %>
    <div class="col-md-2">
      <%= ff.number_field :price, class: 'form-control', disabled: true %>
    </div>
  </div>
<% end %>

<div class="form-group">
  <label class="control-label col-md-12">ラッピング</label>
  <div class="col-md-3">
    <%= f.select :wrapping_id, @wrapping, {prompt: true}, disabled: true, class: 'form-control' %>
  </div>
</div>

<div class="form-group">
  <%= f.label :zipcode, class: 'control-label col-md-12' %>
  <div class="col-md-2">
    <%= f.text_field :zipcode, placeholder: '〒 123-3456', disabled: true, class: 'form-control' %>
  </div>
</div>

<div class="form-group">
  <%= f.label :dest, class: 'control-label col-md-12' %>
  <div class="col-md-12">
    <%= f.text_field :dest, disabled: true, class: 'form-control' %>
  </div>
</div>

<div class="form-group">
  <%= f.label :payment, class: 'control-label col-md-12' %>
  <div class="col-md-3">
    <%= f.select :payment, Order.payment.options, {prompt: true},
      disabled: true, class: 'form-control' %>
  </div>
</div>
<%= f.submit '戻る', name: :back, class: 'col-md-offset-10 col-md-2 btn, btn-default' %>
<%= f.submit '確定する', class: 'col-md-offset-10 col-md-2 btn, btn-danger' %>
<% end %>
